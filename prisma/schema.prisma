// Prisma schema for MCQ Maker

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Site {
  id        String   @id @default(cuid())
  name      String
  code      String   @unique // Site code for user registration (12-digit)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  admins         Admin[]
  users          User[]
  quizzes        Quiz[]
  adminRequests  AdminRequest[]
}

model Admin {
  id        String   @id @default(cuid())
  siteId    String
  site      Site     @relation(fields: [siteId], references: [id], onDelete: Cascade)
  name      String
  email     String
  password  String   // hashed
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([email])
  @@index([siteId])
}

model AdminRequest {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String   // hashed
  status    String   @default("pending") // pending, approved, rejected
  siteCode  String?  // Assigned by super admin
  siteId    String?  // Created site ID after approval
  site      Site?    @relation(fields: [siteId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
}

model User {
  id        String     @id @default(cuid())
  siteId    String
  site      Site       @relation(fields: [siteId], references: [id], onDelete: Cascade)
  name      String
  email     String
  password  String     // hashed
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  attempts  QuizAttempt[]

  @@unique([siteId, email])
  @@index([siteId])
}

model Quiz {
  id        String     @id @default(cuid())
  siteId    String
  site      Site       @relation(fields: [siteId], references: [id], onDelete: Cascade)
  title     String
  createdAt DateTime   @default(now())
  questions Question[]
  attempts  QuizAttempt[]

  @@index([siteId])
}

model QuizAttempt {
  id          String   @id @default(cuid())
  quizId      String
  quiz        Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  studentName String
  totalQuestions Int
  correctAnswers Int
  wrongAnswers Int
  skippedQuestions Int
  
  startTime   DateTime
  endTime     DateTime
  totalTimeSeconds Int
  
  createdAt   DateTime @default(now())

  @@index([quizId])
  @@index([userId])
}

model Question {
  id           String   @id @default(cuid())
  quizId       String
  quiz         Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)

  text         String
  options      Json     // string[]
  correctIndex Int

  createdAt    DateTime @default(now())

  @@index([quizId])
}
